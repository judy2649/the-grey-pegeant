{
    "version": 2,
    "installCommand": "npm install",
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/src/app.js"
        },
        {
            "source": "/",
            "destination": "/public/index.html"
        },
        {
            "source": "/(.*)",
            "destination": "/public/$1"
        }
    ]
}