# Server Port
PORT=3000

# Safaricom Daraja (M-Pesa) Credentials
# get these from developer.safaricom.co.ke
MPESA_CONSUMER_KEY=your_consumer_key
MPESA_CONSUMER_SECRET=your_consumer_secret
MPESA_PASSKEY=your_passkey
MPESA_SHORTCODE=174379
MPESA_TILL_NUMBER=9920854
# For sandbox, use: https://sandbox.safaricom.co.ke/mpesa/stkpush/v1/processrequest
# For production, use: https://api.safaricom.co.ke/mpesa/stkpush/v1/processrequest
MPESA_ENV=sandbox

# Africa's Talking Credentials
# get these from africastalking.com
AT_API_KEY=your_api_key
AT_USERNAME=sandbox

# Callback URL (Must be publicly accessible, use Ngrok for local dev)
BASE_URL=https://your-domain.com

# M-Pesa Callback Security (Generate a strong random secret)
# This prevents hackers from sending fake payment confirmations
MPESA_CALLBACK_SECRET=your_random_secret_here_change_this

# Firebase Service Account (For Vercel deployment)
# Paste the entire JSON from Firebase Console as a single-line string
# Example: FIREBASE_SERVICE_ACCOUNT={"type":"service_account","project_id":"..."}
FIREBASE_SERVICE_ACCOUNT=
